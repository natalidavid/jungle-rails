<section class="categories">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>



  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Categories</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category|%>
        <tr>
          <td><%= category.name %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= link_to 'Add New Category', [:new, :admin, :category], class: 'btn btn-primary' %>
  </div>

</section>